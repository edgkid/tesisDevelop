<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edgar.optotypedevelope.CrudReadAppointmentActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewLoginUser"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/boy"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_on"/>

            <Button
                android:id="@+id/buttonUpdate"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_updated"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listPatienCrudR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="680dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <!--////////////////////Sección de datos////////////////////////////////////////////////-->
                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/idCrudRImagePeril"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:src="@drawable/usuario_icon"
                        android:layout_marginLeft="20dp"/>

                    <LinearLayout
                        android:layout_width="290dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/idCrudRTextNamesR"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="nombres 1 y dos"
                            android:textSize="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"/>

                        <TextView
                            android:id="@+id/idCrudRTextLastNamesR"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Apellidos 1 y dos"
                            android:textSize="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"/>

                        <TextView
                            android:id="@+id/idCrudRTextYears"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Edad"
                            android:textSize="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="270dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/idCrudRLastAppointment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ultima consulta: "
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:id="@+id/idCrudRNexttAppointment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Proxima consulta: "
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"/>

                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/separatorM"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="307dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/idCrudAvRightEstimated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Av Derecho: "
                        android:textSize="20dp"
                        />

                    <TextView
                        android:id="@+id/idCrudAvLeftEstimated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Av Izquierdo: "
                        android:textSize="20dp"
                        />

                    <TextView
                        android:id="@+id/idCrudCenterSubjective"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Centra: "
                        android:textSize="20dp"
                        />

                    <TextView
                        android:id="@+id/idCrudSustainSubjective"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Sostiene: "
                        android:textSize="20dp"
                        />

                    <TextView
                        android:id="@+id/idCrudMaintainSubjective"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Mantiene: "
                        android:textSize="20dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="480dp"
                    android:layout_height="300dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Descripción Diagnostica:"
                            android:textSize="20dp"/>

                        <TextView
                            android:id="@+id/idCrudDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonViewDiagnosticRead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Diagnostico"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
