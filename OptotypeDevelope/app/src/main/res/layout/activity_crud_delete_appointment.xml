<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edgar.optotypedevelope.CrudDeleteAppointmentActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewLoginUser"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/boy"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_on"/>

            <Button
                android:id="@+id/buttonUpdate"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_updated"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listPatienCrudD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

        </LinearLayout>
        <!--///////////////////////////Secci贸n derecha////////////////////////////-->
        <LinearLayout
            android:layout_width="680dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--/////////////////////////////////Secci贸n superrior/////////////////////////////-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <!--///////////////////////////Secci贸n de datos del paciente////////////////////////////-->
                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/idCrudDImagePeril"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/usuario_icon"/>
                    <LinearLayout
                        android:layout_width="290dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/idCrudDTextNames"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="nombres 1 y dos"
                            android:textSize="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"/>

                        <TextView
                            android:id="@+id/idCrudDTextLastNames"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Apellidos 1 y dos"
                            android:textSize="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"/>

                        <TextView
                            android:id="@+id/idCrudDTextYears"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Edad"
                            android:textSize="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/idCrudDLastAppointment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ultima consulta"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:id="@+id/idCrudDNexttAppointment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Proxima consulta: "
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"/>

                </LinearLayout>

            </LinearLayout>
            <View
                android:id="@+id/separatorD"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"/>
            <!-- ////////////////////////////////// Secci贸n inferior////////////////////////////-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp">

                <Button
                    android:id="@+id/idCrudDButtonAcepted"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Aceptar"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
