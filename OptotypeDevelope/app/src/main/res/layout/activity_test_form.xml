<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edgar.optotypedevelope.TestFormActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewLoginUser"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/boy"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_on"/>

            <Button
                android:id="@+id/buttonUpdate"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_updated"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <!--Lado Izquierdo -->
        <LinearLayout
            android:layout_width="650dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Datos Personales-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Datos del Paciente"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/TextAppointmentDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="250dp"
                        android:layout_marginTop="10dp"
                        android:text="Fecha:"
                        android:textSize="15dp" />

                </LinearLayout>

                <View
                    android:id="@+id/separatorPatientData"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TextPatient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Paciente:"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/TextPatientDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Fecha de Nacimiento:"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/TextPatientYearsOld"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Edad:"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/TextPatientSex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Sexo:"
                        android:textSize="15dp" />

                </LinearLayout>

            </LinearLayout>

            <!--Test Subjetivo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Test Subjetivo"
                        android:textSize="20dp" />

                </LinearLayout>

                <View
                    android:id="@+id/separatorSubjective"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:text="Centra"
                            android:textSize="15dp" />

                        <Spinner
                            android:id="@+id/DropDowCenter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"></Spinner>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="Sostiene"
                            android:textSize="15dp" />

                        <Spinner
                            android:id="@+id/DropDowSustain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"></Spinner>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:text="Mantiene"
                            android:textSize="15dp" />

                        <Spinner
                            android:id="@+id/DropDowMaintain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"></Spinner>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <!--Test Objetivo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Test Objetivo"
                        android:textSize="20dp" />

                </LinearLayout>

                <View
                    android:id="@+id/separatorObjective"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp">

                    <LinearLayout
                        android:layout_width="330dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:text="Av Detectada Sobre (Ojo Derecho)"
                            android:textSize="15dp" />

                        <Spinner
                            android:id="@+id/DropDownRight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"></Spinner>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="330dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="Av Detectada Sobre (Ojo Izquierodo)"
                            android:textSize="15dp" />

                        <Spinner
                            android:id="@+id/DropDownLeft"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"></Spinner>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            
        </LinearLayout>

        <!--Lado Derecho -->
        <LinearLayout
            android:layout_width="630dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Antecendentes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Motivo de Consulta"
                        android:textSize="20dp" />

                </LinearLayout>

                <View
                    android:id="@+id/separatorReazonData"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="315dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:text="Antecedente Maternos"
                            android:textSize="15dp" />

                        <Spinner
                            android:id="@+id/dropDownPreviusMon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"></Spinner>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="315dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:text="Antecedente Paternos"
                            android:textSize="15dp" />

                        <Spinner
                            android:id="@+id/dropDownPreviusDad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"></Spinner>

                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>

            <!-- Sintomas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="Sintomas"
                        android:textSize="15dp" />

                    <Spinner
                        android:id="@+id/DropDownSignal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></Spinner>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TextAllSignals"
                        android:layout_width="200dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/TextParentMon"
                        android:layout_width="170dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/TextParentDad"
                        android:layout_width="170dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="10dp" />


                </LinearLayout>

            </LinearLayout>

            <!-- Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="Control de Consulta"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/separatorTypeTest"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="Tipo de Prueba"
                            android:textSize="15dp" />

                        <Spinner
                            android:id="@+id/DropDownTypeTest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></Spinner>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="ColaboraciÃ³nd del Paciente"
                            android:textSize="15dp" />

                        <Spinner
                            android:id="@+id/DropDownCoperation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></Spinner>


                    </LinearLayout>

                </LinearLayout>

                <!-- COntroles del presentador -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ImageTestControlTest"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/carta"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="430dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp">

                            <Button
                                android:id="@+id/lastImage"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="80dp"
                                android:layout_marginTop="40dp"
                                android:background="@drawable/icon_last_test" />

                            <Button
                                android:id="@+id/nextImage"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="40dp"
                                android:background="@drawable/icon_next_test" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp">

                            <Button
                                android:id="@+id/AppointmetProcess"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Procesar" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
</LinearLayout>
