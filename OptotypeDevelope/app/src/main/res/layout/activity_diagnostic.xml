<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edgar.optotypedevelope.DiagnosticActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewLoginUser"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/boy"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_on"/>

            <Button
                android:id="@+id/buttonUpdate"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_updated"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- lado Izquierdo -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="640dp"
            android:layout_height="match_parent">

            <!-- Datos del Paciente -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Test Objetivo"
                        android:textSize="20dp" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/diagnosticPhoto"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/usuario_icon"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="440dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/diagnosticAppointment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="fecha: dd/mm/yyyy"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="20dp"/>

                        <TextView
                            android:id="@+id/diagnosticPatient"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Paciente"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="20dp"/>

                        <TextView
                            android:id="@+id/diagnosticYear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Edad:"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="20dp"/>

                        <TextView
                            android:id="@+id/diagnosticsex"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sexo:"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="20dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Test Estandar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Test Objetivo Estandar"
                        android:textSize="20dp" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="320dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/diagnosticAvRigthE"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="AV:"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="20dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="320dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/diagnosticAvLeftE"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="AV:"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="20dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Test Personalizado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Test Objetivo Personalizado"
                        android:textSize="20dp" />

                </LinearLayout>

                <View
                    android:id="@+id/separatorObjective"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="320dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/diagnosticAvRigthP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="AV:"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="20dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="320dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/diagnosticAvLeftP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="AV:"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="20dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Test Subjetivo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Test Subjetivo"
                        android:textSize="20dp" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/diagnosticCenter"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Centra:"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/diagnosticSustain"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Sostiene:"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/diagnosticMaintain"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Mantiene:"
                        android:textSize="20dp"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- Lado Derecho -->
        <LinearLayout
            android:layout_width="640dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:id="@+id/diagnosticReazon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Motivo de Consulta:....."
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@color/colorPrimary">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/colorAccent">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <Button
                    android:id="@+id/diagnosticButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Volver"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
