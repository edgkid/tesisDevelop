<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edgar.optotypedevelope.DiagnosticActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewLoginUser"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/boy"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_on"/>

            <Button
                android:id="@+id/buttonUpdate"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_updated"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/diagnosticPhoto"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/usuario_icon"/>

            <TextView
                android:id="@+id/diagnosticAppointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="fecha: dd/mm/yyyy"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/diagnosticPatient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paciente"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/diagnosticYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edad:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/diagnosticsex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sexo:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/diagnosticReazon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Razon de Consulta:....."
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test Estandar"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/diagnosticAvRigthE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AV:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/diagnosticAvLeftE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AV:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test Personalizado"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/diagnosticAvRigthP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AV:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/diagnosticAvLeftP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AV:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test Subjetivo"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/diagnosticCenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Centra:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/diagnosticSustain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sostiene:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/diagnosticMaintain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mantiene:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/diagnosticButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volver"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
